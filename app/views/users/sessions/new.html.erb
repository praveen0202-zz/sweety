<%= render "users/shared/flash" %>
<div class="login-bg">
  <div class="panel panel-signin">
    <div class="panel-body">
      <h2>Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field input-group mb15">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <%= f.text_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
          </div><br/>

          <div class="field input-group mb15">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "********"%>
          </div><br/>

          <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Log in", class: "btn btn-success" %>
          </div>
      <% end %>
    </div>
    <br/>
    <div class="panel-footer">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>